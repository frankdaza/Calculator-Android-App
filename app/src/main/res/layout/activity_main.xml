<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.frankdaza.calculator.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:paddingTop="40dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="32sp" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="false"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btnAC"
            android:layout_rowWeight="1"
            android:onClick="btnAC"
            android:text="AC" />

        <Button
            android:id="@+id/btnPluMin"
            android:layout_rowWeight="1"
            android:onClick="btnPluMin"
            android:text="+/-" />

        <Button
            android:id="@+id/btnPer"
            android:layout_rowWeight="1"
            android:onClick="btnOP"
            android:text="%" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_rowWeight="1"
            android:onClick="btnOP"
            android:text="/" />

        <Button
            android:id="@+id/btn7"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="9" />

        <Button
            android:id="@+id/btnMul"
            android:text="*"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="6" />

        <Button
            android:id="@+id/btnMin"
            android:layout_rowWeight="1"
            android:onClick="btnOP"
            android:text="-" />

        <Button
            android:id="@+id/btn1"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="3" />

        <Button
            android:id="@+id/btnPlu"
            android:layout_rowWeight="1"
            android:onClick="btnOP"
            android:text="+" />

        <Button
            android:id="@+id/btn0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            android:layout_rowWeight="1"
            android:onClick="btnNumberEvent"
            android:text="." />

        <Button
            android:id="@+id/btnEqu"
            android:layout_rowWeight="1"
            android:onClick="btnEqual"
            android:text="=" />

    </GridLayout>


</LinearLayout>
